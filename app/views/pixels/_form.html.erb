<%= simple_form_for @pixel, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :_type %>
  <%= f.input :_id %>
  <%= f.input :code %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pixels_path, :class => 'btn' %>
  </div>
<% end %>
