<%- model_class = Pixel -%>
<div class="page-header row-fluid">
  <h1 class='pull-left'><%=t '.title', :default => model_class.model_name.human %></h1>
  <div class='pull-right'>
    <h4>tracking src="http://<%= request.env["HTTP_HOST"] %>/t/<%= @pixel.code_or_default %>"</h4>
    <h4>redirect href="http://<%= request.env["HTTP_HOST"] %>/r/<%= @pixel.target_url_or_default %>"</h4>
  </div>
</div>
<div class='row-fluid'>
<div class='pull-left'>
  <h3><%= @uniques.count.to_s + " " + "unique".pluralize(@uniques.count) %> out of <%= @hits.count.to_s + " " + "hit".pluralize(@hits.count) %> 
   | <%= @unique_clicks.count.to_s + " unique " + "click".pluralize(@unique_clicks.count) %> out of 
   <%= @clicks.count.to_s %>    
  </h3>
</div>
<form method='get' class='form-inline pull-right' style='margin: 14px;'>
  <fieldset>
    Show 
      <%= select_tag 'days', options_for_select(["1", "3", "7", "30", '9001' ], @days.count.to_s), :class => 'input-mini' %>
      <label class="checkbox">
        <%= check_box_tag 'unique', true, params[:unique] %> Only Unique?
      </label>
    <button type="submit" class="btn btn-primary">Days Back</button>
  </fieldset>
</form>
</div>

<small>Redirect URL:  <%=  @pixel.target_url.blank? ? "(not yet specified)" : link_to(@pixel.target_url) %></small>
<div class='well'>
  <div id="chart" style="width:100%; height:400px;">
  </div>
</div>
<script type="text/javascript">
  var chart_opts = {'categories':[], 'series':[]}
  chart_opts['categories'] = <%= @days.map{|t| t.to_s(:rfc822) }.to_json.html_safe %>
  chart_opts['series'][0] = <%= @totals.to_json.html_safe %>
  chart_opts['series'][1] = <%= @click_totals.to_json.html_safe %>
  console.log(chart_opts)
</script>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:click?) %></th>
      <th><%= model_class.human_attribute_name(:request_ip) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:agent) %></th>
      <th><%= model_class.human_attribute_name(:referrer) %></th>
    </tr>
  </thead>
  <tbody>
    <% @hits.each do |hit| %>
      <tr>
        <td><%= hit.clicked ? "<i class='icon-ok'></i>".html_safe : "" %></td>
        <td><%= hit.request_ip %><%= ("<br>"+hit.geo.to_pretty_s).html_safe if hit.geo %></td>
        <td><%= timeago(hit.created_at) %></td>
        <td><%= hit.agent %></td>
        <td><%= hit.referrer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pixels_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pixel_path(@pixel), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pixel_path(@pixel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
