<%- model_class = Pixel -%>
<div class="page-header row-fluid">
  <h1 class='pull-left'><%=t '.title', :default => model_class.model_name.human %>
    <% if @pixel.tags_array.any? %>
      <small>tagged with 
        <% @pixel.tags_array.each_with_index do |tag, i| %><%= ", " if i != 0 %> "<%= link_to tag, pixels_path(:tag => tag) %>"<% end %>
      </small>
    <% end %>
   </h1>
  <div class='pull-right'>
    <h4>tracking src="http://<%= request.env["HTTP_HOST"] %>/t/<%= @pixel.code_or_default %>"</h4>
    <h4>redirect href="http://<%= request.env["HTTP_HOST"] %>/r/<%= @pixel.code_or_default %>"</h4>
  </div>
</div>
<div class='row-fluid'>
  <div class='pull-left'>
    <h3><%= @uniques.count.to_s + " " + "unique".pluralize(@uniques.count) %> out of <%= @hits.count.to_s + " " + "hit".pluralize(@hits.count) %> 
     | <%= @unique_clicks.count.to_s + " unique " + "click".pluralize(@unique_clicks.count) %> out of 
     <%= @clicks.count.to_s %>    
    </h3>
  </div>
  <form method='get' class='form-inline pull-right' style='margin: 14px;'>
    <fieldset>
      Show 
        <%= select_tag 'days', options_for_select(["1", "3", "7", "30", '9001' ], @days.count.to_s), :class => 'input-mini' %>
        <label class="checkbox">
          <%= check_box_tag 'unique', true, params[:unique] %> Only Unique?
        </label>
      <button type="submit" class="btn btn-primary">Days Back</button>
    </fieldset>
  </form>
</div>

<small>Redirect URL:  <%=  @pixel.target_url.blank? ? "(not yet specified)" : link_to(@pixel.target_url) %></small>
<div class='well'>
  <div id="hits_chart" class="span12" style="height:350px;">
    <%= line_chart [{:name => 'Hits', :data => @hit_data}, {:name => 'Clicks', :data => @click_data}] %>
  </div>
</div>
<div class="row-fluid">
  <!-- browser graph -->
  <div class='span6' id='browsers_chart' style='height:300px;'>
    <%= pie_chart @browser_data %>
  </div>
  <!-- operating system / platform graph -->
  <div class='span6' id='os_chart' style='height:300px;'>
    <%= pie_chart @os_data %>
  </div>
</div>
<div class="row-fluid">
  <!-- countries -->
  <div class='span6' id='heatmapArea'>
  </div>
  <!-- referrers graph -->
  <div class='span6' id='referrers_chart' style='height:300px;'>
    <%= column_chart @referrer_data %>
  </div>
</div>

<table class="table table-striped" id="pixel_data" data-geo-path="<%= pixel_geocoded_path(@pixel, :format => :json) %>">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:click?) %></th>
      <th><%= model_class.human_attribute_name(:request_ip) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:agent) %></th>
      <th><%= model_class.human_attribute_name(:referrer) %></th>
    </tr>
  </thead>
  <tbody>
    <% @hits.each do |hit| %>
      <tr>
        <td><%= hit.clicked ? "<i class='icon-ok'></i>".html_safe : "" %></td>
        <td><%= (hit.geo.to_pretty_s+"<br>").html_safe if hit.geo %><small><%= hit.request_ip %></small></td>
        <td><%= timeago(hit.created_at) %></td>
        <td><%= (hit.pretty_ua+"<br>").html_safe if hit.nice_ua != {} %><small><%= hit.agent %></small></td>
        <td><%= hit.referrer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pixels_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pixel_path(@pixel), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pixel_path(@pixel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
