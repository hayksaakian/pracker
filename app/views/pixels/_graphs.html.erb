<div class='row-fluid'>
  <div class='span8'>
    <div class='well'>
      <div id="hits_chart" style="height:300px;">
        <%= line_chart [{:name => 'Hits', :data => @data_hash[:hit]}, {:name => 'Clicks', :data => @data_hash[:click]}, {:name => 'CTR', :data => @data_hash[:ctr]}] %>
      </div>
    </div>
  </div>
  <!-- countries -->
  <div class='span4'>
    <div class='well' id='heatmapArea'>
    </div>
  </div>
</div>
<div class="row-fluid">
  <!-- browser graph -->
  <div class='span4' id='browsers_chart' style='height:300px;'>
    <%= pie_chart @data_hash[:browser] %>
  </div>
  <!-- operating system / platform graph -->
  <div class='span4' id='os_chart' style='height:300px;'>
    <%= pie_chart @data_hash[:os] %>
  </div>  
  <!-- referrers graph -->
  <div class='span4' id='referrers_chart' style='height:300px;overflow-y: scroll;'>
    <table class='table table-striped sortable'>
      <thead><td>Hits</td><td>Referrer</td></thead>
      <tbody>
        <% @data_hash[:referrer].sort_by{|k,v| v}.reverse.each do |v, k| %>
          <tr><td><%= k %></td><td><%= v %></td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>